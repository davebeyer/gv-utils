{
  "version": "3.1.6",

  "compilerOptions": {
    "target": "es2015",
    "module": "es2020",
    "lib": [ "dom", "es2015", "es2016", "es2017" ],
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "."
  },
  "exclude" : [
    "node_modules"
  ],
  "include" : ["src"]
}
